public class Hallow_Block {
    public static void main(String[] args){
        int i,j,rows,cols;
        rows=5;
        cols=5;
        for(i=0;i<rows;i++){
            for(j=0;j<cols;j++){
                if(i==0||i==rows-1||j==0||j==cols-1){
                System.out.print("$");
            }else{
            System.out.print(" ");
        }
    }
        System.out.println();
}}}
